<apex:page controller="EmailSender">
    <apex:pageMessages />
    <apex:form >
        <apex:pageBlock title="Send message to candidates">
            <apex:pageBlockSection columns="1">
            <apex:selectList value="{!candidateEmail}" size="1" label="Candidate">
                <apex:selectOptions value="{!Candidates}"/>
            </apex:selectList>
            <apex:inputCheckbox label="HTML" value="{!html}"/>
            <apex:inputText label="Email Subject" size="81" value="{!emailCommunication.Subject__c}"/>
            <apex:inputtextarea label="Message" cols="100" rows="20" value="{!emailCommunication.Message__c}"/>
         </apex:pageBlockSection>

            <apex:pageBlockButtons >
                <apex:commandButton value="Send Email" action="{!sendEmail}"/>
            </apex:pageBlockButtons>
            
        </apex:pageBlock>
    </apex:form>
</apex:page>