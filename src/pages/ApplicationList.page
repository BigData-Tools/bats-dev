  <script type="text/javascript">
 // Load the Visualization API and the map package.
        google.load("visualization", "1", {packages:["corechart"]});

        // Set a callback to run when the Google Visualization API is loaded.
        google.setOnLoadCallback(initCharts);

        function initCharts() {        
            
                // load Column chart
                    var chart = new google.visualization.ColumnChart(document.getElementById('applicationstatuschart_div'));
                    // Prepare table model for chart with columns
               var data = google.visualization.arrayToDataTable([
          ['Position', 'New', 'Phone Screen','Onsite', 'Offer','Accepted'],
          ['Web App',  41, 10,5, 3,1],
          ['Marketing',  43, 10,3,1,1],
          ['Sales',  60, 23,10, 8,7],
          ['Designer',  123,56,21, 10,5]            
        ]);                                                           
                      
                    chart.draw(data, {'isStacked': true,
             'legend':{position: 'right', textStyle: {fontSize: 10}},
             'colors': ['#1C86EE', '#00CD66', '#663399', '#FF8C00','#FF0033'],
            'hAxis': {'title': 'Application Status Distribution'}}); 
            
        
        }

    </script>

